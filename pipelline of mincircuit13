pipeline {
    agent any

    tools {
        maven 'maven3'
    }

    environment {
        GIT_REPO_NAME = "mindcircuit13"
        GIT_USER_NAME = "NagireddygariDinesh"
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Cloning GIT HUB Repo'
                git branch: 'main', url: 'https://github.com/NagireddygariDinesh/mindcircuit13.git'
            }
        }

        stage('SonarQube Scan') {
            steps {
                echo 'Scanning project'
                sh 'ls -ltr'
                sh '''mvn sonar:sonar \
                    -Dsonar.host.url=http://16.171.9.218:9000/ \
                    -Dsonar.login=sqa_8b95a699283d48828b104c76c5b7d766fd56c38a'''
            }
        }

        stage('Build Artifact') {
            steps {
                echo 'Build Artifact'
                sh 'mvn clean package'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'Build Docker Image'
                sh "docker build -t devopshubg333/batch13:${BUILD_NUMBER} ."
            }
        }

        stage('Tag and Push Docker Image') {
            steps {
                script {
                    echo 'Tag and Push Docker Image'
                    withCredentials([string(credentialsId: 'dockerhub', variable: 'dockerhub')]) {
                        sh 'docker login -u nagireddygaridinesh -p ${dockerhub}'
                    }
                    sh "docker tag devopshubg333/batch13:${BUILD_NUMBER} nagireddygaridinesh/chinna:${BUILD_NUMBER}"
                    sh "docker push nagireddygaridinesh/chinna:${BUILD_NUMBER}"
                    echo 'Pushed to Docker Hub'
                }
            }
        }

        stage('Update Deployment File') {
            steps {
                echo 'Update Deployment File'
                withCredentials([string(credentialsId: 'github', variable: 'githubtoken')]) {
                    sh """
                        git config user.email "dineshdineshreddy7043@gmail.com"
                        git config user.name "NagireddygariDinesh"
                        sed -i "s/batch13:.*/batch13:${BUILD_NUMBER}/g" deployment.yml
                        git add .
                        git commit -m "Update deployment image to version ${BUILD_NUMBER}" || echo "No changes to commit"
                        git push https://${githubtoken}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                    """
                }
            }
        }
    }
}
